<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?> <?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.text.Font?>
<StackPane fx:id="zoneGlobale" stylesheets="@../css/styleLaby.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="J4.sae_labyrinthe.controleur.SceneLabyrintheControleur">
    <children>
        <BorderPane>
            <top>
                <HBox fx:id="enteteJeu" alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="1280.0" spacing="20.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="10" left="20" right="20" top="10"/>
                    </padding>
                    <children>
                        <Text fx:id="timerInfo"
                              text="Temps: 0s"
                              style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: black; -fx-stroke: black; -fx-stroke-width: 1px;" />

                        <Text fx:id="info1" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: black;"/>
                        <Text fx:id="info2" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: black;"/>
                        <Text fx:id="info3" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: black;"/>

                        <Region HBox.hgrow="ALWAYS" />

                        <Button fx:id="btnPause" text="Pause" mnemonicParsing="false" onMouseClicked="#afficherMenuPause">
                            <padding>
                                <Insets top="5" right="10" bottom="5" left="10"/>
                            </padding>
                        </Button>
                    </children>
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
                    <CheckBox fx:id="printJoueur" text="Afficher le joueur" mnemonicParsing="false" disable="true">
                        <font>
                            <Font size="16.0" />
                        </font>
                        <style>
                            -fx-text-fill: black;
                        </style>
                    </CheckBox>
                    <CheckBox fx:id="printSortie" text="Afficher la sortie" mnemonicParsing="false" disable="true">
                        <font>
                            <Font size="16.0" />
                        </font>
                        <style>
                            -fx-text-fill: black;
                        </style>
                    </CheckBox>
                    <CheckBox fx:id="murADecouvrir" text="Mur à découvrir" mnemonicParsing="false" disable="true">
                        <font>
                            <Font size="16.0" />
                        </font>
                        <style>
                            -fx-text-fill: black;
                        </style>
                    </CheckBox>
                    <CheckBox fx:id="decouvertePersistante" text="Découverte persistante" mnemonicParsing="false" disable="true">
                        <font>
                            <Font size="16.0" />
                        </font>
                        <style>
                            -fx-text-fill: black;
                        </style>
                    </CheckBox>
                </HBox>
            </top>

            <center>
                <StackPane fx:id="zoneLaby" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </BorderPane.margin>
                </StackPane>
            </center>
        </BorderPane>
    </children>
</StackPane>