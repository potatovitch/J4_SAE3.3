<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../css/style.css"
      fx:controller="J4.sae_labyrinthe.controleur.SceneScoreDuJourControleur">

    <Text text="Scores du jour" style="-fx-font-size: 24px;"/>

    <TableView fx:id="tableScores" prefWidth="400">
        <columns>
            <TableColumn text="Joueur" fx:id="colJoueur" prefWidth="200"/>
            <TableColumn text="Score" fx:id="colScore" prefWidth="200"/>
        </columns>
    </TableView>

    <Button text="Retour" onMouseClicked="#revenirMenu"/>
</VBox>
